@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Danh sách kiểu nhà</h1>
    <p>
        <button asp-action="Create" class="btn btn-primary disabled-link" disable>Tạo mới</button>
    </p>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CategoryName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    <button disabled asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-outline-primary disabled-link" title="Edit"><i class="fa-solid fa-pen-to-square"></i></button>
                                    <a  asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-outline-warning" title="Detail"><i class="fa-solid fa-circle-info"></i></a>
                                    <button disabled onclick="deletee(@item.CategoryId);" href="#" class="btn btn-outline-danger disabled-link" title="delete"><i class="fa-solid fa-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

